<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/spinnerEntryClueName"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/spinnerEntryEdit"
        android:text="blahblah"/>

    <ImageView
        android:id="@+id/spinnerEntryEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/spinnerEntryClueName"
        android:layout_alignBottom="@id/spinnerEntryClueName"
        android:layout_toLeftOf="@+id/spinnerEntryRemove"
        android:scaleType="fitCenter"
        android:src="@drawable/check" />

    <ImageView
        android:id="@+id/spinnerEntryRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/spinnerEntryClueName"
        android:layout_alignBottom="@id/spinnerEntryClueName"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:src="@drawable/cross" />

</RelativeLayout>